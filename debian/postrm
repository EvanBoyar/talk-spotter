#!/bin/bash
set -e

case "$1" in
    purge)
        # Remove data directory (venv, etc.)
        rm -rf /var/lib/talk-spotter

        # Remove config
        rm -rf /etc/talk-spotter

        # Remove user
        if id -u talk-spotter >/dev/null 2>&1; then
            userdel talk-spotter || true
        fi
        ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
